    Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="شماره درخواست :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="TextBoxShomareDarkhast" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="5,0,0,0"/>
            <telerik:RadButton x:Name="ButtonSave" Content="ذخیره" Height="30" Width="70" Margin="20,0,0,0" Click="ButtonSave_Click" IsDefault="True"/>
        </StackPanel>

        <StatusBar Grid.Row="2" Name="StatusBar1"/>
    </Grid>
</Window>
