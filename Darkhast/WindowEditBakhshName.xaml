        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock TextWrapping="Wrap" Text="نام بخش" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox x:Name="TextBoxBakhshName" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="200" Margin="0,0,10,0" TabIndex="0" />
            <telerik:RadButton x:Name="ButtonEditBakhshName" Content="ثبت" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70" MinHeight="30" 
                               IsDefault="True" Click="ButtonEditBakhshName_Click" TabIndex="1" />

        </StackPanel>
        <StatusBar x:Name="StatusBar1" Grid.Row="1"/>
    </Grid>
</Window>
